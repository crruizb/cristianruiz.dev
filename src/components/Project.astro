---
const {title, description, mainTech, secTech1, secTech2, secTech3, href} = Astro.props
---
<a href={href} target="_blank" class="group block border-l-2 border-stone-300 dark:border-stone-700 pl-4 py-2 hover:border-primary dark:hover:border-accent transition-all duration-300 hover:pl-6">
	<div class="">
		<div class="flex-1">
			<h4 class="text-xl text-stone-700 dark:text-stone-200 group-hover:text-primary dark:group-hover:text-accent transition-colors font-medium">
				{title}
			</h4>
			{description && <p class="text-sm text-stone-500 dark:text-stone-400 mt-1">{description}</p>}
		</div>
		<div class="flex gap-1.5 items-center mt-1 flex-shrink-0">
			{mainTech && <div class="p-1.5 rounded-md bg-stone-100 dark:bg-stone-800 border border-stone-200 dark:border-stone-700 group-hover:scale-110 transition-transform"><img class="h-4 w-4" height="16" width="16" src={mainTech.src} alt={mainTech.alt} /></div>}
			{secTech1 && <div class="p-1.5 rounded-md bg-stone-100 dark:bg-stone-800 border border-stone-200 dark:border-stone-700 group-hover:scale-110 transition-transform"><img class="h-4 w-4" height="16" width="16" src={secTech1.src} alt={secTech1.alt} /></div>}
			{secTech2 && <div class="p-1.5 rounded-md bg-stone-100 dark:bg-stone-800 border border-stone-200 dark:border-stone-700 group-hover:scale-110 transition-transform"><img class="h-4 w-4" height="16" width="16" src={secTech2.src} alt={secTech2.alt} /></div>}
			{secTech3 && <div class="p-1.5 rounded-md bg-stone-100 dark:bg-stone-800 border border-stone-200 dark:border-stone-700 group-hover:scale-110 transition-transform"><img class="h-4 w-4" height="16" width="16" src={secTech3.src} alt={secTech3.alt} /></div>}
		</div>
	</div>
</a>