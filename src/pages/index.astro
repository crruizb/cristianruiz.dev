---
import Layout from '@/layouts/Layout.astro';
import "@/styles/global.css"
import Link from '@/components/Link.astro';
import GoLogo from "@/assets/logos/go-seeklogo.svg";
import KotlinLogo from "@/assets/logos/kotlin-seeklogo.svg";
import KtorLogo from "@/assets/logos/ktor-icon-seeklogo.svg";
import JavaLogo from "@/assets/logos/java-seeklogo.svg";
import SpringLogo from "@/assets/logos/spring-seeklogo.svg";

import HTMLLogo from "@/assets/logos/html5-seeklogo.svg";
import CSSLogo from "@/assets/logos/css-3-seeklogo.svg";
import JSLogo from "@/assets/logos/javascript-js-seeklogo.svg";
import TSLogo from "@/assets/logos/typescript-seeklogo.svg";
import ReactLogo from "@/assets/logos/react-seeklogo.svg";
import AstroLogo from "@/assets/logos/astro-icon-seeklogo.svg";

import PostgresLogo from "@/assets/logos/postgresql-seeklogo.svg";
import MongoLogo from "@/assets/logos/mongodb-seeklogo.svg";
import RedisLogo from "@/assets/logos/redis-seeklogo.svg";

import TFLogo from "@/assets/logos/terraform-seeklogo.svg";
import K8sLogo from "@/assets/logos/kubernetes-seeklogo.svg";
import GHActionsLogo from "@/assets/logos/github-actions-seeklogo.svg";
import GCPLogo from "@/assets/logos/google-cloud-seeklogo.svg";

import ArrowRight from "@/assets/icons/arrow-right.svg"
import Project from '@/components/Project.astro';
import Skill from '@/components/Skill.astro';
---
<Layout>
	<main class="px-8">
		<section class="mb-16">
			<h1 class="bg-linear-to-r from-primary to-accent inline-block text-transparent bg-clip-text font-bold text-6xl my-2 -ml-1 sm:-ml-2">Cristian Ruiz</h1>
			<h2 class="text-2xl text-black mb-2 dark:text-white">Backend Engineer</h2>
			<p class="text-xl text-stone-600 dark:text-stone-300 leading-7">I design and build scalable distributed systems, architect microservices platforms, and solve complex technical challenges</p>
		</section>

		<section class="mb-20">
			<h3 class="text-stone-700 dark:text-stone-100 text-2xl opacity-60 mb-6">Technical Expertise</h3>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
				<div class="flex gap-2 items-start">
					<ArrowRight width={24} height={24} class="shrink-0 mt-1"/>
					<div>
						<p class="text-lg font-medium text-stone-800 dark:text-stone-100">10+ Years of Experience</p>
						<p class="text-base text-stone-600 dark:text-stone-400">Designing and building scalable backend systems across retail, automotive, and energy sectors</p>
					</div>
				</div>
				<div class="flex gap-2 items-start">
					<ArrowRight width={24} height={24} class="shrink-0 mt-1"/>
					<div>
						<p class="text-lg font-medium text-stone-800 dark:text-stone-100">Technical Mentorship</p>
						<p class="text-base text-stone-600 dark:text-stone-400">Guiding developers through code reviews, pair programming, and architectural decisions</p>
					</div>
				</div>
				<div class="flex gap-2 items-start">
					<ArrowRight width={24} height={24} class="shrink-0 mt-1"/>
					<div>
						<p class="text-lg font-medium text-stone-800 dark:text-stone-100">Distributed Systems Architect</p>
						<p class="text-base text-stone-600 dark:text-stone-400">Microservices, event-driven architectures, and high-availability systems design</p>
					</div>
				</div>
				<div class="flex gap-2 items-start">
					<ArrowRight width={24} height={24} class="shrink-0 mt-1"/>
					<div>
						<p class="text-lg font-medium text-stone-800 dark:text-stone-100">Cloud & Infrastructure</p>
						<p class="text-base text-stone-600 dark:text-stone-400">Kubernetes, CI/CD pipelines, and cloud-native architecture on GCP</p>
					</div>
				</div>
			</div>
		</section>

		<section class="mb-20">
			<h3 class="text-stone-700 dark:text-stone-100 text-2xl opacity-60 mb-4">Now</h3>
			<div class="flex gap-2">
				<ArrowRight width={24} height={24} class="shrink-0 mt-1"/>
				<p class="text-xl">Working at <Link href="https://mediamarktsaturn.com/" name="MediaMarktSaturn" />, Europe's leading consumer electronics retailer, building and operating internal platforms that keep business-critical operations running reliably at scale ðŸ’¾</p>
			</div>
		</section>

		<section class="mb-20">
			<h3 class="text-stone-700 dark:text-stone-100 text-2xl opacity-60 mb-4">Before</h3>
			<div class="flex gap-2 mb-4 items-start">
				<ArrowRight width={24} height={24} class="shrink-0 mt-1"/>
				<p class="text-xl">Built cloud-native solutions for <Link href="https://cariad.technology/" name="CARIAD" /> (Volkswagen Group) at <Link href="https://hexad.es/" name="Hexad" />. Designed event-driven architectures, implemented CI/CD pipelines, and established engineering best practices ðŸš˜</p>
			</div>
			<div class="flex gap-2">
				<ArrowRight width={24} height={24} class="shrink-0 mt-1"/>
				<p class="text-xl">Architected automation systems at <Link href="https://effenmark.es/" name="Effenmark"/> and optimized workflows for their energy management platform ðŸ’¡</p>
			</div>
		</section>

		<section class="mb-20">
			<h3 class="text-stone-700 dark:text-stone-100 text-2xl opacity-60 mb-6">Side Projects</h3>
			<p class="text-base text-stone-600 dark:text-stone-400 mb-6">Personal projects I build to explore new technologies and experiment with different architectural patterns</p>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6">
				<div class="space-y-1">
					<Project href="https://steamcompanion.dpdns.org" title="Steam Companion" mainTech={{src: KotlinLogo.src, alt: "Kotlin logo"}} secTech1={{src: ReactLogo.src, alt: "React logo"}} secTech2={{src: SpringLogo.src, alt: "Spring Boot logo"}} secTech3={{src: PostgresLogo.src, alt: "Postgres logo"}}/>
					<div class="pl-4 text-xs text-stone-500 dark:text-stone-400">
						<Link href="https://github.com/crruizb/steam-companion" name="View source â†’" />
					</div>
				</div>

				<div class="space-y-1">
					<Project href="https://github.com/crruizb/hetzner-server-management" title="Hetzner SV mgmt" mainTech={{src: K8sLogo.src, alt: "Kubernetes logo"}} secTech1={{src: TFLogo.src, alt: "Terraform logo"}} />
					<div class="pl-4 text-xs text-stone-500 dark:text-stone-400">
						<Link href="https://github.com/crruizb/hetzner-server-management" name="View source â†’" />
					</div>
				</div>

				<div class="space-y-1">
					<Project href="https://smartnews.pages.dev" title="Smart news" mainTech={{src: JavaLogo.src, alt: "Java logo"}} secTech1={{src: ReactLogo.src, alt: "React logo"}} secTech2={{src: SpringLogo.src, alt: "Spring Boot logo"}} secTech3={{src: PostgresLogo.src, alt: "Postgres logo"}} />
					<div class="pl-4 text-xs text-stone-500 dark:text-stone-400">
						<Link href="https://github.com/crruizb/smartnews" name="View source â†’" />
					</div>
				</div>

				<div class="space-y-1">
					<Project href="https://esteticaderma.com/" title="EstÃ©tica Derma" mainTech={{src: AstroLogo.src, alt: "Astro logo"}} secTech1={{src: ReactLogo.src, alt: "React logo"}} />
					<div class="pl-4 text-xs text-stone-500 dark:text-stone-400">
						<Link href="https://github.com/crruizb/estetica_derma" name="View source â†’" />
					</div>
				</div>
			</div>
		</section>

		<section class="mb-10">
			<h3 class="text-stone-700 dark:text-stone-100 text-2xl opacity-60 mb-6">Skills</h3>

			<h4 class="mb-2 text-lg">Backend</h4>
			<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-2 gap-y-2">
				<Skill name="Go" logo={GoLogo.src}/>
				<Skill name="Kotlin" logo={KotlinLogo.src}/>
				<Skill name="Ktor" logo={KtorLogo.src}/>
				<Skill name="Java" logo={JavaLogo.src}/>
				<Skill name="Spring Boot" logo={SpringLogo.src}/>
				<Skill name="Postgres" logo={PostgresLogo.src}/>
				<Skill name="Mongo DB" logo={MongoLogo.src}/>
				<Skill name="Redis" logo={RedisLogo.src}/>
			</div>

			<h4 class="mb-2 my-6 text-lg">Frontend</h4>
			<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-2 gap-y-2">
				<Skill name="HTML" logo={HTMLLogo.src}/>
				<Skill name="CSS" logo={CSSLogo.src}/>
				<Skill name="Javascript" logo={JSLogo.src}/>
				<Skill name="Typescript" logo={TSLogo.src}/>
				<Skill name="React" logo={ReactLogo.src}/>
				<Skill name="Astro" logo={AstroLogo.src}/>
			</div>

			<h4 class="mb-2 my-6 text-lg">CI/CD</h4>
			<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-2 gap-y-2">
				<Skill name="Kubernetes" logo={K8sLogo.src}/>
				<Skill name="Github Actions" logo={GHActionsLogo.src}/>
				<Skill name="GCP" logo={GCPLogo.src}/>
				<Skill name="Terraform" logo={TFLogo.src}/>
			</div>
		</section>
	</main>
</Layout>
